<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Entity\Transaction" table="transactions">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="amount" type="float"/>
        <field name="description" type="string" />
        <field name="date" type="datetime" />
        <many-to-one field="category" target-entity="App\Entity\Category">
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-one>
        <many-to-one field="user" target-entity="App\Entity\User">
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-one>
        <one-to-one field="receipt" target-entity="App\Entity\Receipt" mapped-by="transaction" />
    </entity>
</doctrine-mapping>