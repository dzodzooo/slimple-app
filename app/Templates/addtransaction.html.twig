{% block addtransaction %} 
{% set min = 100 %}
<form method="POST">
  <table>
    <tr>
      <td><label for="description">Description</label></td>
      <td><input id="description" name="description" type="text" value="" /></td>
    </tr>
    <tr>
      <td><label for="amount"/>Amount</label></td>
      <td><input id="amount" name="amount" type="number" value="{{min}}" min="{{min}}"/></td>
    </tr>
    <tr>
      <td><label for="date"/>Date</label></td>
      <td><input id="date" name="date" type="date" value="" /></td>
    </tr>
    <tr>
      <td><label for="category">Category</label></td>
      <td>
        <select name="category" id="category">
        {% for category in categories %}
          <option value="{{category.id}}">{{category.name}}</option>    
        {% endfor %}
        </select>
    </td>
    </tr>
    <tr>
      <td></td>
      <td>
        <input type="submit" value="Add Transaction" class="btnSubmit"/>
      </td>
    </tr>
  </table>
</form>
{% endblock addtransaction %}