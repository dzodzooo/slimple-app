{% extends 'base.html.twig' %} {% use "navbar.html.twig" %} {% use
"category/addcategory.html.twig" %} {% block content %} {% set active =
"categories" %}
{{ block("navbar") }}

{{ block("addcategory") }}

<br />

<table class="datatable">
  <tbody>
    <tr>
      <th>
        Name
        <form action="/categories" method="get" class="orderBy">
          <input type="hidden" name="name" value="name" />
          <input type="hidden" name="orderBy" value="ASC" />
          <button type="submit">↑</button>
        </form>
        <form action="/categories" method="get" class="orderBy">
          <input type="hidden" name="name" value="name" />
          <input type="hidden" name="orderBy" value="DESC" />
          <button type="submit">↓</button>
        </form>
      </th>
    </tr>
    {% for category in categories %}
    <tr id="category_row{{ category.id }}">
      <td>
        <span id="category_name{{ category.id }}">{{ category.name }}</span>
      </td>

      <td>
        <button
          id="catBtnOpenModal{{ category.id }}"
          class="redBtn catBtnOpenModal"
        >
          Change
        </button>
      </td>

      <td>
        <form action="/categories/{{ category.id }}" method="post">
          <input
            type="hidden"
            name="{{ csrf.NameKey }}"
            value="{{ csrf.Name }}"
          />
          <input
            type="hidden"
            name="{{ csrf.ValueKey }}"
            value="{{ csrf.Value }}"
          />
          <input type="hidden" name="_METHOD" value="DELETE" />
          <button type="submit" class="redBtn">X</button>
        </form>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% include "category/updatecategory.html.twig" %} {% endblock content %}
