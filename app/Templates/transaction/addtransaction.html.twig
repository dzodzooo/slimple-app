{% block addtransaction %} 
{% set min = 10 %}
<form method="POST">
  <input type="hidden" name="{{ csrf.NameKey }}" value="{{ csrf.Name }}" />
  <input type="hidden" name="{{ csrf.ValueKey }}" value="{{ csrf.Value }}" />
  <table class="datapost">
    <tr>
      <td><label for="description">Description</label></td>
      <td><input id="description" name="description" type="text" value="{{ oldData.description }}" required/></td>
    </tr>
    <tr>
      <td></td>
      <td><span class="error"> {{errors.description|first}} </span></td>
    </tr>
    <tr>
      <td><label for="amount"/>Amount</label></td>
      <td><input id="amount" name="amount" type="number" value="{{oldData.amount ? oldData.amount : min}}" min="{{min}}" required/></td>
    </tr>
    <tr>
      <td></td>
      <td><span class="error"> {{errors.amount|first}} </span></td>
    </tr>
    <tr>
      <td><label for="date"/>Date</label></td>
      <td><input id="date" name="date" type="date" /></td>
    </tr>
    <tr>
      <td></td>
      <td><span class="error"> {{errors.date|first}} </span></td>
    </tr>
    <tr>
      <td><label for="category" value="{{oldData.category}}">Category</label></td>
      <td>
        <select name="category" id="category">
        {% for category in categories %}
          <option value="{{category.id}}">{{category.name}}</option>    
        {% endfor %}
        </select>
    </td>
    </tr>
    <tr>
      <td></td>
      <td>
        <input type="submit" value="Add Transaction" class="btnSubmit"/>
      </td>
    </tr>
  </table>
</form>
{% endblock addtransaction %}